@model UsuarioModel;
@{
    ViewData["Title"] = "Apagar usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário @Model.Username?</h3>
</div>



<a class="btn btn-primary w-100" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<div class="form-group" style="margin-bottom:10px"> </div>
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="DeletarUsuario">Confirmar exclusão</a>
