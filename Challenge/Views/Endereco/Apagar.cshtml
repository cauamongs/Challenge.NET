@model EnderecoModel;
@{
    ViewData["Title"] = "Apagar endereco";
}

<div class="text-center">
    <h3>Realmente deseja apagar esse endereço? </h3>
</div>

<a class="btn btn-primary w-100" role="button" asp-controller="Endereco" asp-action="Index">Cancelar exclusão</a>
<div class="form-group" style="margin-bottom:10px"> </div>
<a class="btn btn-danger w-100" role="button" asp-controller="Endereco" asp-route-id="@Model.Id" asp-action="DeletarEndereco">Confirmar exclusão</a>

