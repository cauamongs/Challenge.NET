@model PreferenciaViagemModel;
@{
    ViewData["Title"] = "Apagar preferencia de viagem";
}

<div class="text-center">
    <h3>Realmente deseja apagar a preferência? </h3>
</div>

<a class="btn btn-primary w-100" role="button" asp-controller="PreferenciaViagem" asp-action="Index">Cancelar exclusão</a>
<div class="form-group" style="margin-bottom:10px"> </div>
<a class="btn btn-danger w-100" role="button" asp-controller="PreferenciaViagem" asp-route-id="@Model.Id" asp-action="DeletarPreferencia">Confirmar exclusão</a>
